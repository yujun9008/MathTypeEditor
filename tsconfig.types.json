{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "rootDir": "src",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "jsx": "react-jsx"
  },
  "include": [
    "src/MathTypeEditor.tsx",
    "src/const.ts",
    "src/index.types.ts",
    "src/declaration.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "demo",
    "examples",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/vite.config.ts",
    "**/vite.config.js"
  ]
}